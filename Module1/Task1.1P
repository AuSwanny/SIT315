int state = 0;

void setup()
{
  
  pinMode(13, OUTPUT);
  pinMode(2, INPUT);
  Serial.begin(9600);
}

void loop()
{
  state = digitalRead(2);
  
  if (state == HIGH){
    digitalWrite(13, HIGH);
    Serial.println("Motion detected!");
  } else {
    digitalWrite(13, LOW);
    Serial.println("Nothing...");
  }
  delay(500); // Wait for 1000 millisecond(s)
}
